@model Proyecto_DSW_QuickStop.Models.CategoriaModel

@{
    ViewData["Title"] = "Detalle de la Categoria";
}
<br />
<br />


<div class="col-md-12 text-center">
            <img src="/Logos/1.png" alt="Logo" style="width: 200px; height: 200px;">
</div>
<br />
<br />
<style>
    body {
        background-image: url("@Url.Content("/Fondos/3.jpg")");
        background-repeat: no-repeat;
        background-size: cover;
        background-position: center;
    }
    .container {
        background-color: white;
        padding: 20px;
        border-radius: 10px;
    }
</style>
<br />
<br />
<h1 class="text-center">DETALLE DE LA CATEGORIA</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h4>Detalles : </h4>
            <hr />
            <div class="row" style="background-color: white; padding: 10px;">
                <div class="col-sm-4">
                    @Html.DisplayNameFor(model => model.cod_cat)
                </div>
                <div class="col-sm-8">
                    @Html.DisplayFor(model => model.cod_cat)
                </div>
                <div class="col-sm-4">
                    @Html.DisplayNameFor(model => model.nombre_categoria)
                </div>
                <div class="col-sm-8">
                    @Html.DisplayFor(model => model.nombre_categoria)
                </div>
                <div class="col-sm-4">
                    @Html.DisplayNameFor(model => model.cod_marca)
                </div>
                <div class="col-sm-8">
                    @Html.DisplayFor(model => model.cod_marca)
                </div>
                <div class="col-sm-4">
                    @Html.DisplayNameFor(model => model.cod_marca)
                </div>
                <div class="col-sm-8">
                    <img src="@Url.Content("/Marcas/" + Model.cod_marca + ".png")" alt="@Model.cod_marca" style="width: 80px; height: 80px;" />
                </div>
            </div>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="text-center">
                @Html.ActionLink("Editar", "EditCat", new { id = Model.cod_cat }, new { @class = "btn btn-primary" }) 
                <a asp-action="IndexCategoriaNombre" class="btn btn-secondary">Volver a la Lista</a>
            </div>
        </div>
    </div>

    <div class="row justify-content-center mt-4">
        <div class="col-md-6">
            @if (ViewBag.MENSAJE != null)
            {
                <div class="alert alert-info">
                    <p>@ViewBag.MENSAJE</p>
                </div>
            }
        </div>
    </div>
</div>
