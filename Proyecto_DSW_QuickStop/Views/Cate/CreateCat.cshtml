@model Proyecto_DSW_QuickStop.Models.CategoriaModel

@{
    ViewData["Title"] = "Registrar Categoria";
}

<style>
    body {
        background-image: url("@Url.Content("/Fondos/3.jpg")");
        background-repeat: no-repeat;
        background-size: cover;
        background-position: center;
    }

    .my-form {
        background-color: rgba(255, 255, 255, 0.9);
        padding: 20px;
        border-radius: 5px;
        margin-top: 50px;
        max-width: 400px;
        margin-left: auto;
        margin-right: auto;
    }

    .my-form label {
        font-weight: bold;
    }

    .my-form .form-control {
        border-radius: 20px;
    }

    .my-form .btn-primary {
        border-radius: 20px;
    }
</style>

<div class="container">
    <div class="row">
        <div class="col-md-12 text-center">
            <img src="/Logos/1.png" alt="Logo" style="width: 200px; height: 200px;">
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <form asp-action="CreateCat" class="my-form">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="cod_cat" class="control-label">Código de Categoría:</label>
                    <input asp-for="cod_cat" class="form-control" />
                    <span asp-validation-for="cod_cat" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="nombre_categoria" class="control-label">Nombre de Categoría:</label>
                    <input asp-for="nombre_categoria" class="form-control" />
                    <span asp-validation-for="nombre_categoria" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="cod_marca" class="control-label">Código de Marca:</label>
                    @Html.DropDownList("cod_marca", ViewBag.DISTRITOS as SelectList,
                                        "Seleccione", new { @class = "form-select" })
                    <span asp-validation-for="cod_marca" class="text-danger"></span>
                </div>

                
                <br />
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Crear</button>
                </div>
            </form>
        </div>
    </div>
</div>

<br />
<div class="text-center">
    <a class="btn btn-success" asp-action="IndexCategoriaNombre">Volver al Listado</a>
</div>

<br />
@if (!string.IsNullOrEmpty(ViewBag.MENSAJE))
{
    <div class="alert alert-info">
        <p>@ViewBag.MENSAJE</p>
    </div>
}

